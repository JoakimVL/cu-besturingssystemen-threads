<Window x:Class="ThreadExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreadExample"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200" Closed="Window_Closed">
    <Grid>
        <Button Content="Start timer" HorizontalAlignment="Left" Margin="23,26,0,0" VerticalAlignment="Top" Width="146" Click="Button_Start"/>
        <Label x:Name="lblTime" Content="" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="23,84,0,0" VerticalAlignment="Top" Width="146" Height="76" FontSize="24" FontWeight="Bold"/>
        <Button Content="Stop timer" HorizontalAlignment="Left" Margin="23,50,0,0" VerticalAlignment="Top" Width="146" Click="Button_Stop"/>

    </Grid>
</Window>
